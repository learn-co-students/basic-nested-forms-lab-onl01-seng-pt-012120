<%= form_for @recipe do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br><br>

    <%= f.fields_for :ingredients do |ff| %>
        <%= ff.label :name %>
        <%= ff.text_field :name %><br><br>
        
        <%= ff.label :quantity %>
        <%= ff.text_field :quantity %><br><br>    
    <% end %>
    
    <%= f.submit %>

<% end %>