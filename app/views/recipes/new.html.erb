<%=  form_for @recipe do |t|%>
    <%= t.label :title %>
    <%= t.text_field :title %>

        <%= t.fields_for :ingredients do |ing|%>
            <%= ing.label :name%>
            <%= ing.text_field :name%>
            <br>
            <%= ing.label :quantity%>
            <%= ing.text_field :quantity%>

            <% end %>


<%= t.submit %>
<% end %>
